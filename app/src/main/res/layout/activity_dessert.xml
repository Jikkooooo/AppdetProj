<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"

    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#755CC8"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--app:navigationIcon="@menu/main_menu"-->

            <ImageView
                android:id="@+id/imageButton3"
                android:layout_width="412dp"
                android:layout_height="200dp"
                android:layout_marginEnd="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/dessert_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <LinearLayout
                android:id="@+id/lenearlayer1"
                android:layout_width="404dp"
                android:layout_height="262dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imageButton3"
                tools:layout_editor_absoluteX="3dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cv1"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert1"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:paddingTop="10dp"
                            android:text="Halo-Halo"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:textAlignment="center"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/ivDessert1"
                            android:layout_width="183dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/halohalo" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert2"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:text="Puto"
                            android:paddingTop="10dp"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:textAlignment="center"
                            android:textSize="25dp"/>

                        <ImageView
                            android:id="@+id/ivDessert2"
                            android:layout_width="183dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/puto" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lenearlayer2"
                android:layout_width="404dp"
                android:layout_height="262dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/lenearlayer1"
                tools:layout_editor_absoluteX="3dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cv3"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert3"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:paddingTop="10dp"
                            android:text="Turon"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:textAlignment="center"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/ivDessert3"
                            android:layout_width="183dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:src="@drawable/turon"
                            android:scaleType="fitXY" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cv4"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert4"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:paddingTop="10dp"
                            android:text="Sapin-Sapin"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:textAlignment="center"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/ivDessert4"
                            android:layout_width="176dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:src="@drawable/sapinsapin"
                            android:scaleType="fitXY"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lenearlayer3"
                android:layout_width="404dp"
                android:layout_height="262dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/lenearlayer2"
                tools:layout_editor_absoluteX="3dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cv5"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert5"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:paddingTop="10dp"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:text="Bibingka"
                            android:textAlignment="center"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/ivDessert5"
                            android:layout_width="176dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:src="@drawable/bibingka"
                            android:scaleType="fitXY" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cv6"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert6"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:paddingTop="10dp"
                            android:text="Taho"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:textAlignment="center"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/ivDessert6"
                            android:layout_width="176dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/taho" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lenearlayer4"
                android:layout_width="404dp"
                android:layout_height="262dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/lenearlayer3"
                tools:layout_editor_absoluteX="3dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cv7"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert7"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:paddingTop="10dp"
                            android:text="Ube Halaya"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:textAlignment="center"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/ivDessert7"
                            android:layout_width="176dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:src="@drawable/ubehalaya"
                            android:scaleType="fitXY" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cv8"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="195dp"
                        android:layout_height="250dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvDessert8"
                            android:layout_width="183dp"
                            android:layout_height="210dp"
                            android:gravity="bottom"
                            android:paddingTop="130dp"
                            android:text="Buko Pandan"
                            android:textColor="#755CC8"
                            android:fontFamily="@font/baloo_bhaijaan"
                            android:textAlignment="center"
                            android:textSize="25dp" />

                        <ImageView
                            android:id="@+id/ivDessert8"
                            android:layout_width="176dp"
                            android:layout_height="190dp"
                            android:paddingBottom="27dp"
                            android:src="@drawable/bukopandan"
                            android:scaleType="fitXY"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>
